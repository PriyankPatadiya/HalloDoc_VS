@model DAL.ViewModels.ProfilePatient




<div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
    <div class="container-fluid p-4 ">
        <div class=" mx-auto justify-content-between pt-2 mb-5" id="secondDiv" style="width: 90%; height: 115% !important">
            <div class="backbtn d-flex justify-content-between">
                <h3 class="text-body">User Profile</h3>
                <a asp-controller="PatientDashBoard" asp-action="PatientDashboard"
                   class="p-2 btn btn-outline-info border-info rounded ">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         width="16"
                         height="16"
                         fill="currentColor"
                         class="bi bi-chevron-left"
                         viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                    </svg>
                    <span class="mx-2 ">Back</span>
                </a>
            </div>
            <div id="FormOfPatientRequest" class=" mt-3 p-3 gx-4 mb-3 bg-gradient shadow">
                <form asp-action="editprofile" method="post" class="form-floating" id="profileform">

                    <!-- general information -->

                    <div class="row gx-4">
                        <h4 class="fw-semibold text-body">General Information</h4>
                        
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                   asp-for="FirstName"
                                   class="form-control inputss shadow-none"
                                   id="floatingInput"
                                   placeholder="First Name" disabled/>
                            <label for="floatingInput" class="ms-2">First Name</label>
                            @*<span asp-validation-for="FirstName" class="text-danger " style="font-size: 11px;"></span>*@
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                   asp-for="LastName"
                                   class="form-control  inputss shadow-none"
                                   id="floatingInput"
                                   placeholder="Last Name" disabled />
                            <label for="floatingInput" class="ms-2">Last Name</label>
                            @*<span asp-validation-for="LastName" class="text-danger" style="font-size: 11px;"></span>*@
                        </div>

                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="date"
                                   asp-for="BirthDate"
                                   class="form-control inputss shadow-none"
                                   id="floatingInput"
                                   placeholder="Date Of Birth" disabled />
                            <label for="floatingInput" class="ms-2">Date Of Birth</label>
                            @*<span asp-validation-for="BirthDate" class="text-danger" style="font-size: 11px;">  </span>*@
                        </div>

                        <!-- Contact Information -->

                        <h4 class="fw-semibold text-body mt-3">
                            Contact Information
                        </h4>
                        

                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="tel"
                                   asp-for="PhoneNumber"
                                   class="form-control inputss shadow-none"
                                   id="floatingInput"
                                   placeholder="PhoneNumber" disabled />
                            <label for="floatingInput" class="ms-2">Mobile Number</label>
                            @*<span asp-validation-for="" class="text-danger" style="font-size: 11px;"></span>*@
                        </div>

                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="email"
                                   asp-for="Email"
                                   class="form-control inputss shadow-none"
                                   id="email1"
                                   id="floatingInput"
                                   placeholder="name@InputType.com"
                                   onchange="CheckEmail()" readonly disabled/>
                            <label for="floatingInput" class="ms-2">Email</label>
                            @*<span asp-validation-for="" class="text-danger" style="font-size: 11px;"></span>*@
                        </div>


                        <!-- Location Information -->

                        <h4 class="fw-semibold text-body mt-3">
                            Location Information
                        </h4>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                   asp-for="Street"
                                   class="form-control inputss shadow-none"
                                   id="floatingInput"
                                   placeholder="Street" disabled />
                            <label for="floatingInput" class="ms-2">Street</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                   asp-for="City"
                                   class="form-control inputss shadow-none"
                                   id="floatingInput"
                                   placeholder="City" disabled />
                            <label for="floatingInput" class="ms-2">City</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                   asp-for="State"
                                   class="form-control inputss shadow-none"
                                   id="floatingInput"
                                   placeholder="State" disabled />
                            <label for="floatingInput" class="ms-2">State</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-4 form-floating my-3">
                            <input type="text"
                                   asp-for="ZipCode"
                                   class="form-control inputss shadow-none"
                                   id="floatingInput"
                                   placeholder="Zip Code" disabled />
                            <label for="floatingInput" class="ms-2">Zip Code</label>
                        </div>
                        
                        <div class="col-sm-12 col-md-12 col-lg-2 form-floating my-3">
                            <button class=" btn btn-outline-info p-3 ">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                                </svg>
                                <span> Map</span>
                            </button>
                        </div>

                        <div class="d-flex justify-content-end my-3">
                            <button type="button" class="btn border-none bg-info p-3 text-light fw-semibold me-4" id="submitBtnforenable">
                                Edit
                            </button>
                                <a asp-action="editprofile"><button type="submit" class="btn border-none bg-info p-3 text-light fw-semibold me-4 hiddenbtn" style="display:none;">
                                    Save
                                </button>
                            </a>
                            <button type="button" class=" hiddenbtn btn border-none bg-danger p-3 text-light fw-semibold me-4" id="cancelbtn" style="display:none;">
                                Cancel
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

   