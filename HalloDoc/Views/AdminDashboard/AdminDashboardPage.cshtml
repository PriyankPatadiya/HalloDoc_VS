@model DAL.ViewModels.AdminDashboardVM

<style>
    .triangle{
        width: 0;
        height: 0;
        border-left: 17px solid transparent;
        border-right: 17px solid transparent;
        border-top : 17px solid black;
        position: absolute;
        bottom: -17px;
        left: 50%;
        transform: translateX(-50%);
    }
</style>

<div class=" container-fluid tab-pane fade show active bg-light" id="pills-AdminDashboard" style="min-height: 77vh;" role="tabpanel" aria-labelledby="pills-AdminDashboard-tab" tabindex="0">

    @*Tabs Of Status*@

    <div class="container-fluid px-4 text-center py-2">
        <ul class=" nav row gx-5 gy-5 mt-0 px-3" id="pills-tab" role="tablist">
            <li class=" nav-item col rounded-4 mx-2  text-start position-relative" id="statuslink1" style="background-color: #e9eaef;" role="presentation">
                <button class="btn text-decoration-none text-light w-100 text-start shadow-none border-0 Status-btn"data-id="1">
                    <div class="p-2  d-flex fs-5 Status-btn-text" >New</div>
                    <h4 class="fw-bolder ps-1 pb-2 Status-Count">@Model.NewCount</h4>
                </button>
                <div id="triangle1" class="triangle"></div>
             </li>
                
 
            <li class=" nav-item col rounded-4 mx-2 text-primary text-start position-relative" id="statuslink2" style="background-color: #e5f2f8;" role="presentation">
                <button class="btn text-decoration-none text-primary w-100 text-start shadow-none border-0 Status-btn" data-id="2">
                    <div class="p-2  d-flex fs-5 Status-btn-text">Pending</div>
                    <h4 class="fw-bolder ps-1 pb-2 Status-Coun">@Model.PendingCount</h4>
                </button>
                <div id="triangle2" class="triangle" style="display: none;"></div>
            </li>
            <li class=" nav-item col rounded-4 mx-2 text-success text-start position-relative" id="statuslink3" style="background-color: #e9f0e8;" role="presentation">
                <button class="btn text-decoration-none text-success w-100 text-start shadow-none border-0 Status-btn" data-id="3">
                    <div class="p-2 d-flex fs-5 Status-btn-text">Active</div>
                    <h4 class="fw-bolder ps-1 pb-2 Status-Coun">@Model.ActiveCount</h4>
                </button>
                <div id="triangle3" class="triangle" style="display: none;"></div>
            </li>
            <li class=" nav-item col rounded-4 mx-2 text-danger text-start position-relative" id="statuslink4" style="background-color: #f7e6ee;" role="presentation">
                <button class="btn text-decoration-none text-danger w-100 text-start shadow-none border-0 Status-btn" data-id="4">
                    <div class="p-2 d-flex fs-5 Status-btn-text">Conclude</div>
                    <h4 class="fw-bolder ps-1 pb-2 Status-Coun">@Model.ConcludeCount</h4>
                </button>
                <div id="triangle4" class="triangle " style="display: none;"> </div>
            </li>
            <li class=" nav-item col rounded-4 mx-2 text-start position-relative" id="statuslink5" style="background-color: #e5eef5;" role="presentation">
                <button class="btn text-decoration-none text-primary w-100 text-start shadow-none border-0 Status-btn" data-id="5">
                    <div class="p-2 d-flex fs-5 Status-btn-text">To Close</div>
                    <h4 class="fw-bolder ps-1 pb-2 Status-Coun">@Model.ToCloseCount</h4>
                </button>
                <div id="triangle5" class="triangle" style="display: none;"></div>
            </li>
            <li class=" position-relative nav-item col rounded-4 mx-2 text-start" id="statuslink6" style="background-color: #efeef4;" role="presentation">
                <button class="btn text-decoration-none text-danger w-100 text-start shadow-none border-0 Status-btn" data-id="6">
                    <div class="p-2 d-flex fs-5 Status-btn-text">Unpaid</div>
                    <h4 class="fw-bolder ps-1 pb-2 Status-Count">@Model.UnpaidCount</h4>
                </button>
                <div id="triangle6" class="triangle" style="display: none;"></div>
            </li>

        </ul>
    </div>


    @*Buttons and patientName*@

    <div class="row mt-4 px-3">
        <div class="col-3">
            <p class="fs-4 ps-2 fw-bolder">Patients <span class="text-primary fs-6" id="statusspan">(New)</span></p>
        </div>
        <div class="col-9 py-1 d-flex justify-content-end ">
            <button type="button" class="btn btn-info text-white me-2">
                <i class="bi bi-send  me-md-2 "></i><span class="d-none d-lg-inline">Send Link</span>
            </button>
            <button type="button" class="btn btn-info  text-white me-2">
                <i class="bi bi-pencil-square me-md-2"></i><span class="d-none d-lg-inline">
                    Create
                    Requests
                </span>
            </button>
            <button type="button" class="btn btn-info  text-white me-2">
                <i class="bi bi-arrow-up-right "></i>
                <span class="d-none d-lg-inline ">Export</span>
            </button>
            <button type="button" class="btn btn-info  text-white me-2">
                <i class="bi bi-box-arrow-up-right "></i><span class="d-none d-lg-inline">
                    Export
                    All
                </span>
            </button>
            <button type="button" class="btn btn-info  text-white me-2">
                <i class="bi bi-person-plus  me-md-2"></i><span class="d-none d-lg-inline">
                    Request DTY
                    Support
                </span>
            </button>
        </div>
    </div>
    
        
    @*SearchButton , requestor type and main table*@

    <div class=" mt-4 px-3 rounded ">
        <div class="row mx-2 bg-white rounded-top">


            <div class="d-flex col-4 ">
                <div class="bg-white mt-2 mb-2 d-flex align-items-center ms-2 " style="width:17rem">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 50 50">
                        <path d="M 21 3 C 11.654545 3 4 10.654545 4 20 C 4 29.345455 11.654545 37 21 37 C 24.701287 37 28.127393 35.786719 30.927734 33.755859 L 44.085938 46.914062 L 46.914062 44.085938 L 33.875 31.046875 C 36.43682 28.068316 38 24.210207 38 20 C 38 10.654545 30.345455 3 21 3 z M 21 5 C 29.254545 5 36 11.745455 36 20 C 36 28.254545 29.254545 35 21 35 C 12.745455 35 6 28.254545 6 20 C 6 11.745455 12.745455 5 21 5 z">
                        </path>
                    </svg>
                    <input type="text" class="form-control ms-2 shadow-none border-none " id="SearchString" placeholder="Search patient">
                </div>
                <div class="d-flex  rounded align-items-center ms-2 ps-2" style="width:17rem">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 50 50">
                        <path d="M 21 3 C 11.654545 3 4 10.654545 4 20 C 4 29.345455 11.654545 37 21 37 C 24.701287 37 28.127393 35.786719 30.927734 33.755859 L 44.085938 46.914062 L 46.914062 44.085938 L 33.875 31.046875 C 36.43682 28.068316 38 24.210207 38 20 C 38 10.654545 30.345455 3 21 3 z M 21 5 C 29.254545 5 36 11.745455 36 20 C 36 28.254545 29.254545 35 21 35 C 12.745455 35 6 28.254545 6 20 C 6 11.745455 12.745455 5 21 5 z">
                        </path>
                    </svg>
                    <select class="form-select border-0 shadow-none" aria-label="Default select example">
                        <option selected>All Regions</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>


            <div class="d-flex col-8 justify-content-end my-3">
                <button class="active-filter filter-options d-flex align-items-center  px-3 py-1 rounded btn shadow-none border-0 buttonOfFilter" data-value="">
                    <span>All</span>
                </button>

                <button class="filter-options px-2 py-1 rounded d-flex align-items-center ms-2 btn shadow-none border-0 buttonOfFilter" data-value="1">
                    <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <circle fill="#5fbc61" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                    </svg>
                    <span class="ms-2">Patient</span>
                </button>

                <button class="filter-options px-2 py-1 rounded d-flex align-items-center ms-2 btn shadow-none border-0 buttonOfFilter" data-value="2">
                    <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <circle fill="#ed9124" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                    </svg>
                    <span class="ms-2">Family/Friend</span>
                </button>
                <button class="filter-options px-2 py-1 rounded d-flex align-items-center ms-2 btn shadow-none border-0 buttonOfFilter" data-value="4">
                    <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <circle fill="#e26277" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                    </svg>
                    <span class="ms-2">Business</span>
                </button>
                <button class="filter-options px-2 py-1 rounded d-flex align-items-center ms-2 btn shadow-none border-0 buttonOfFilter" data-value="3">
                    <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <circle fill="#007fc6" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                    </svg>
                    <span class="ms-2">Concierge</span>
                </button>
                <button class="filter-options px-2 py-1 rounded d-flex align-items-center ms-2 btn shadow-none border-0">
                    <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <circle fill="#9966cd" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                    </svg>
                    <span class="ms-2">VIP</span>
                </button>
            </div>
        </div>

        @*render partial view of request Status *@

        <div class="tab-content SearchPartial">
            <partial name="AdminDashboardNew" model="Model.DashboardTableVM"/>
            <partial name="AdminDashboardPending" model="Model"/>
        </div>
    </div>
   
</div>
