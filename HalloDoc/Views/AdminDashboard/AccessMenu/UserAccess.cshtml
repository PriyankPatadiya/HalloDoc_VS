@model DAL.ViewModels.UserAccessVM
@{
    Layout = "~/Views/Shared/_LayoutAdminDash.cshtml";
}
<div class="container pt-3" style="height: 100% !important">
    <div class="justify-content-between d-flex container-fluid mb-2 position-relative ">
        <div class="">
            <h3>User Access</h3>
        </div>
        <div>
            <a asp-action="MainPage" class="btn btn-outline-info"> ❮  Back </a>
        </div>
    </div>
    <div class="card border-0 p-4 mb-5 rounded" style="height: 80% !important;" >
        <div class="row justify-content-between ps-3">

            <div class="d-flex border border-secondary bg-body rounded align-items-center mx-sm-2 ps-2 my-2 col-3">
                <select class="form-control shadow-none border-0" id="AccountTypeId" name="SelectedStateId">
                    <option value="0">All</option>
                    <option value="1">Admin</option>
                    <option value="3">Physician</option>
                </select>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down me-2" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708" />
                </svg>
            </div>
            <div class="d-flex col-3 mr-0 py-2 justify-content-end">
                <a asp-action="CreateProviderAcc" asp-route-id="1" class="btn btn-outline-info mx-2" id="providerBtn" style="width:fit-content">
                    <span>Create Provider</span>
                </a>
                <a asp-action="CreateAdminAcc" asp-route-id="1"  class="btn btn-outline-info mx-2" id="adminBtn" style="width:fit-content">
                    <span>Create Admin</span>
                </a>
            </div>

        </div>

        <div class="my-3 table-responsive " id="UserAccessPartialDiv">
        </div>

    </div>
</div>
<script src="~/js/UserAccess.js"></script>