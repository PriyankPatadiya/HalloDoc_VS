@model DAL.ViewModels.ViewCaseVM


<div class="bg-body-secondary">
    <div class="mx-auto pt-4  pb-3" style="width:70%;">
        <div class="d-flex justify-content-between my-2">
            <h3>New Request</h3><br />
            <a><button type="button" class="btn btn-primary btn  border border-info bg-transparent text-info shadow-none text-decoration-none ">Back</button></a>
        </div>
        <div class=" shadow bg-white p-4">
            <h4 class="pt-3 mb-4">Patient Information</h4>

            <p>Confirmation Number</p>
            <h4 class="mb-5 text-info"> MD1205223232323</h4>

            <form method="post" id="emailForm" enctype="multipart/form-data" asp-action="ViewCase">
                <div class="row">
                    <div class="col col-12 mb-3">
                        <div class="form-floating">
                            <textarea class="form-control"
                            asp-for="Notes"
                                      placeholder="Leave a comment here"
                                      id="floatingTextarea2"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Patient Notes</label>
                        </div>
                    </div>
                <div class="row">
                    <div class="col col-12 col-sm-6">
                        <div class="form-floating mb-3">
                            <input type="text"
                                   asp-for="FirstName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="name@example.com"  />
                            <label for="floatingInput">First Name</label>
                        </div>
                    </div>
                    <div class="col col-12 col-sm-6 mb-3">
                        <div class="form-floating">
                            <input type="text"
                                    asp-for="LastName"
                                   class="form-control"
                                   id="floatingPassword"
                                   placeholder="Password" />
                            <label for="floatingPassword">Last Name</label>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating">
                            <input type="date"
                               asp-for="DateOfBirth"
                                   class="form-control"
                                   id="floatingPassword"
                                   placeholder="Password"  />
                            <label for="floatingPassword">Date Of Birth</label>
                        </div>
                    </div>
                        <div class="col col-sm-5  col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="Phone"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password"  />
                                <label for="floatingPassword"></label>
                            </div>
                        </div>

                        <div class="col col-sm-1 col-12">
                            <button class=" btn btn-outline-info" style="height:55px">
                                <svg class="me-2" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                                </svg>
                            </button>
                        </div>
                </div>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="email" id="email"
                                       class="form-control"
                                       asp-for="Email"
                                       id="floatingInput"
                                       placeholder="name@example.com"  />
                                <label for="floatingInput">Email</label>

                            </div>
                        </div>
                        <div class="col-1">

                        <button onclick="toggleEdit()" type="button" class=" btn btn-outline-info py-3 px-4 fw-semibold shadow-none border-none" id="EditBtn">
                            Edit
                        </button>
                        </div>
                     </div>
                    
              

                <h4 class="pt-3 mt-4 mb-4">Location Information</h4>

               
                <div class="row">
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input type="text"
                                   asp-for="region"
                                   class="form-control"
                                   id="floatingPassword"
                                   placeholder="Password" disabled />
                            <label for="floatingPassword">Region</label>
                        </div>
                    </div>
                    <div class="col col-sm-5 col-12">
                        <div class="form-floating mb-3">
                            <input type="text"
                                asp-for="address"
                                    class="form-control"
                                   id="floatingPassword"
                                   placeholder="Password" disabled />
                            <label for="floatingPassword">Business Name/Address</label>
                        </div>
                    </div>

                    <div class="col col-sm-1 col-12">
                        <button class=" btn btn-outline-info" style="height:55px">
                            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                            </svg>
                        </button>
                    </div>
                    </div>

                        <div class="row">
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="email" id="email"
                                           class="form-control"
                                           id="floatingInput"
                                           placeholder="name@example.com" disabled />
                                    <label for="floatingInput">Room#</label>

                                </div>
                            </div>
                        </div>

                    <div class="d-flex justify-content-end my-1">

                        <button onclick="toggleSave()" type="submit" class="btn border-none bg-info p-3 text-light fw-semibold me-4" id="SaveBtn">
                            View Notes
                        </button>
                        <button onclick="toggleCancle()" class="btn border-none bg-danger p-3 text-light fw-semibold me-4" id="CancleBtn">
                            Cancle
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
     </div>

