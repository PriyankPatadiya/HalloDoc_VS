@{
    ViewData["Title"] = "Email-Logs(Gmail)";
    Layout = "~/Views/Shared/_LayoutAdminDash.cshtml";
}

<div class="container-fluid" style="height: 70%!important" id="vendorsDivId">
    <div class="mx-0 px-0 d-flex justify-content-between py-1">
        <h4 class="py-3">Email Logs(Gmail)</h4>
        <a asp-action="Dashboard    " class="btn btn-info text-white my-3" onclick="exportData()">
             Back
        </a>
    </div>
    <div class="mx-0 row px-2 border-bottom-0 border border-secondary rounded-top pt-2 pb-2 bg-body">
        <div class="col-sm-12 col-md-12 col-lg-2 form-floating my-3">
            <input class="hidden d-none" id="isExportExcel" value="0" hidden />
            <select class="form-control form-select py-2 shadow-none" id="Role">
                <option value="0">All</option>
                <option value="1">New</option>
                <option value="2">Pending</option>
                <option value="3">Active</option>
                <option value="4">Conclude</option>
                <option value="5">To Close</option>
                <option value="6">Unpaid</option>
            </select>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-2 form-floating my-3">
            <input type="text"
                   class="form-control shadow-none"
                   id="Reciever"
                   placeholder="Last Name" />
            <label for="floatingInput2" class="ms-2">Reciever Name</label>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-2 form-floating my-3">
            <input type="text"
                   class="form-control shadow-none"
                   id="Email"
                   placeholder="Last Name" />
            <label for="floatingInput2" class="ms-2">Email id</label>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-2 form-floating my-3">
            <input type="date"
                   class="form-control shadow-none"
                   id="Created Date"
                   placeholder="From Date Of Service" />
            <label for="floatingInput5" class="ms-2">Created Date</label>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-2 form-floating my-3">
            <input type="date"
                   class="form-control shadow-none"
                   id="Send Date"
                   placeholder="To Date Of Service" />
            <label for="floatingInput5" class="ms-2">Sent Date</label>
        </div>
        <div class="col-lg-2 d-flex justify-content-end py-4">
            <button class="btn btn-outline-info" onclick="removeFilters()">Clear</button>
            <button class="btn btn-info text-white mx-3" onclick="getRecords(1)">Search</button>
        </div>
    </div>
    <div class=" border-top-0 border border-secondary rounded-bottom bg-body px-3 overflow-auto position-relative" style="height: 80% !important" id="EmailLogsPartialDiv">
    </div>
</div>
<script>
    function getEmails(currentPage) {
        $.ajax({
            type: 'GET',
            url: '/AdminDashboard/getEmailRecords',
            traditional: true,
            data: { },

            success: function (response) {
                $("#SearchRecordsPartialDiv").html(response);
            },
            error: function (data) {
                alert(data.d);
            }
        });
    }
</script>
            