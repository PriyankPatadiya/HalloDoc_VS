<table class="table">

    <colgroup>
        <col span="1" style="width: 15%;">
        <col span="1" style="width: 25%;">
        <col span="1" style="width: 15%;">
        <col span="1" style="width: 20%;">
        <col span="1" style="width: 10%;">
        <col span="1" style="width: 15%;">
    </colgroup>

    <thead class="table-head align-middle">
        <tr>
            <td class=" text-start">Stop Notification</td>
            <td>Provider Name</td>
            <td>Role</td>
            <td>OnCall Status</td>
            <td>Status</td>
            <td class="text-center">Actions</td>
        </tr>
    </thead>

    <tbody>

        @foreach (var physician in Model)
        {
            <tr>
                <td class="align-middle">
                    <input type="checkbox" />
                </td>

                <td class="align-middle">
                    @physician.FirstName @physician.LastName
                </td>
                <td class="align-middle">
                    @physician.RoleId
                </td>
                <td class="align-middle">
                    Un Available
                </td>
                <td class="align-middle">
                    @physician.Status
                </td>
                <td>
                    <button class="btn btn-outline-info contact-provider-btn" data-physician-id="@*@physician.Physicianid*@">Contact</button>
                    <button class="btn btn-outline-info">Edit</button>
                </td>
            </tr>
        }

    </tbody>

</table>