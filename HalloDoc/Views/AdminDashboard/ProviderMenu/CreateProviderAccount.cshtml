@model DAL.ViewModels.PhysicianProfileVM@{    ViewData["Title"] = "CreateAccount";
    Layout = "~/Views/Shared/_LayoutAdminDash.cshtml";}<style>    .dropdown-menu.columns-3 {        column-count: 3;    }    .column {        display: inline-block;        margin-right: 1rem;        / Adjust as needed /    }    .form-check {        margin-bottom: 0.5rem;        / Adjust as needed /    }</style><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"><section>    <div class="container-fluid bg-body-secondary ">        <div class="container bg-body-secondary ">            <div class="d-flex justify-content-between pt-4">                <div class="d-flex align-middle">                    <h4 class="my-0 text-center">Create Provider Profile</h4>                </div>                <div>                    <a asp-action="Provider" class="btn btn-outline-info shadow-none"> ❮  Back </a>                </div>            </div>        </div>        <form method="post" id="ResetPhysicianPassword" class="container bg-body p-3 p-md-5 border mt-3" enctype="multipart/form-data">            <div class="container rounded-3 p-0 d-flex flex-column bg-body mt-3">                <h5 class="fw-bold my-3">Account Information</h5>                <input class="d-none" asp-for="physicianid" />                <div class="row row-cols-1 row-cols-md-2 g-3">                    <div class="col">                        <div class="form-floating">                            <input asp-for=Username type="email" class="form-control" id="username" placeholder="User Name" >                            <label for="username">User Name</label>                            <span asp-validation-for="Username" class="text-danger"></span>                        </div>                    </div>                    <div class="col">                        <div class="form-floating">                            <input asp-for=Password type="text" class="form-control" id="Password" placeholder="Password" name="Password">                            <label for="Password">Password</label>                            <span asp-validation-for="Password" class="text-danger"></span>                        </div>                    </div>                    <div class="col">                        <div class="form-floating mb-3">                            <select name="" class="py-2 form-control mb-3 w-100 " id="">                                <option>Admin</option>                                <option>MasterAdmin</option>                            </select>                        </div>                    </div>                </div>                <h5 class="fw-bold my-3">Physician Information</h5>                <div class="row row-cols-1 row-cols-md-2 g-3">                    <div class="col">                        <input value="physicianid" class="d-none" asp-for="physicianid" />                        <div class="form-floating">                            <input asp-for=FirstName type="text" class="form-control " id="firstname" placeholder="First Name" name="firstname" >                            <label for="firstname">First Name</label>                            <span asp-validation-for="FirstName" class="text-danger"></span>                        </div>                    </div>                    <div class="col">                        <div class="form-floating">                            <input asp-for=LastName type="text" class="form-control" id="lastname" placeholder="Last Name">                            <label for="lastname">Last Name</label>                            <span asp-validation-for="LastName" class="text-danger"></span>                        </div>                    </div>                    <div class="col">                        <div class="form-floating">                            <input asp-for=Email type="text" class="form-control" id="email" placeholder="Email" name="email">                            <label for="email">Email</label>                            <span asp-validation-for="Email" class="text-danger"></span>                        </div>                    </div>                    <div class="col">                        <div class="form-floating">                            <input id="phone1" type="tel" class="form-control changable" placeholder="Phone No." asp-for="MobileNo" />                            <label for="phone1">Phone No</label>                            <span asp-validation-for="MobileNo" class="text-danger"></span>                        </div>                    </div>                    <div class="col">                        <div class="form-floating">                            <input asp-for=MedicalLicense type="text" class="form-control changable" id="email" placeholder="Email" name="MedicalLicense">                            <label for="email">Medical License#</label>                            <span asp-validation-for="Username" class="text-danger"></span>                        </div>                    </div>                    <div class="col">                        <div class="form-floating">                            <input asp-for=NPINumber type="text" class="form-control changable" id="email" placeholder="Email" name="NPINumber">                            <label for="email">NPI Number</label>                            <span asp-validation-for="NPINumber" class="text-danger"></span>                        </div>                    </div>                    <div class="col">                        <div class="form-floating">                            <select class="form-select changable1 py-3" aria-label="Default select example" name="state" id="cancelReason" asp-for="State">                                <option selected>Select The State</option>                                @if (Model.Regions != null)
                                {                                    @foreach (var region in Model.Regions)
                                    {                                        <option value="@region.RegionId">@region.Name</option>                                    }                                }                            </select>                            <span asp-validation-for=State class="error-state text-danger"></span>                        </div>                    </div>                    <div class="dropdown col-sm-12 col-md-12 col-lg-6 my-3 form-floating">                        <button class="btn bg-transparent dropdown-toggle form-control py-3 border border-secondary shadow-none text-body" type="button" data-bs-toggle="dropdown" aria-expanded="false">                            Select States                        </button>                        <ul class="dropdown-menu w-100 px-4 columns-3" style="height: 450px;">                            @{                                var k = 0;
                                var b = 0;
                                var totalStates = Model.Regions.Count;
                                var statesPerColumn = (int)Math.Ceiling((double)totalStates / 3);                            }                            @for (int i = 0; i < 3; i++)
                            {                                <div class="column">                                    @for (int j = 0; j < statesPerColumn && k < totalStates; j++)
                                    {                                    <li class="form-check form-check-inline">                                        <input class="form-check-input changable" type="checkbox" id="region-@Model.Regions[k].RegionId" name="Region" value="@Model.Regions[k].RegionId"/>                                        <label class="form-check-label" for="region-@Model.Regions[k].RegionId">@Model.Regions[k].Name</label>                                    </li>                                        k++;
                                    }                        </div>                            }                    </ul>                </div>            </div>            <h5 class="fw-bold my-3">Mailing & Billing Information</h5>            <div class="row row-cols-1 row-cols-md-2 g-3">                <div class="col">                    <div class="form-floating">                        <input asp-for="Address1" type="text" class="form-control changable1" id="address1" placeholder="Address 1" name="Address1">                        <label for="address1">Address 1</label>                        <span asp-validation-for=Address1 class="error-Address1 text-danger"></span>                    </div>                </div>                <div class="col">                    <div class="form-floating">                        <input asp-for=Address2 type="text" class="form-control changable1" id="address2" placeholder="Address 2" name="Address2">                        <label for="address2">Address 2</label>                        <span asp-validation-for="Address2" class="error-Address2 text-danger"></span>                    </div>                </div>                <div class="col">                    <div class="form-floating">                        <input asp-for=City type="text" class="form-control changable1" id="city" placeholder="City" name="City">                        <label for="city">City</label>                        <span asp-validation-for=City class="error-City text-danger"></span>                    </div>                </div>                <div class="col">                    <div class="form-floating">                        <select class="form-select changable1" aria-label="Default select example" id="cancelReason">                            <option selected>Select The State</option>                                @if (Model.Regions != null)
                                {                                    @foreach (var region in Model.Regions)
                                    {                                    <option value="@region.RegionId">@region.Name</option>                                    }                                }                        </select>                        <span asp-validation-for=State class="error-state text-danger"></span>                    </div>                </div>                <div class="col">                    <div class="form-floating">                        <input asp-for=ZipCode type="text" class="form-control changable1" id="city" placeholder="City" name="Zipcode">                        <label for="zip">ZipCode</label>                        <span asp-validation-for="ZipCode" class="error-Zipcode text-danger"></span>                    </div>                </div>                <div class="col-md-6">                    <div class="form-floating">                        <input name="PhoneNumber" type="tel" id='phone2' name="MobileNo" class="form-control changable1" placeholder="(201)555-0123" asp-for="MobileNo">                        <label for="phone2"> Phone no. </label>                        <span asp-validation-for="MobileNo" class=" text-danger"></span>                    </div>                </div>            </div>            <h5 class="fw-bold my-3">Provider Profile</h5>            <div class="row row-cols-1 row-cols-md-2 g-3">                <div class="col">                    <div class="form-floating">                        <input asp-for=BusinessName type="text" class="form-control changable2" id="email" placeholder="Email" name="Businessname">                        <label for="email">BusinessName</label>                        <span asp-validation-for="BusinessName" class="text-danger"></span>                    </div>                </div>                <div class="col">                    <div class="form-floating">                        <input asp-for=BusinessWebsite type="text" class="form-control changable2" id="email" placeholder="Email" name="Businesswebsite">                        <label for="email">BusinessWebsite</label>                        <span asp-validation-for="BusinessWebsite" class="text-danger"></span>                    </div>                </div>                <div class="col">                    <div class="input-group input-group-lg">                        <div id="fileName" asp-for="FileName" class="form-control fs-6 align-middle">                            Select Photo                        </div>                        <input type="file" asp-for="File" class="form-control changable2" id="fileInput" hidden accept="jpg,png" />                        <label class="input-group-text btn btn-info text-light" for="fileInput">                            <span class="d-none d-md-inline">Upload</span>                        </label>                        <span asp-validation-for="File" class="text-danger"></span>                    </div>                </div>                <div class="col-12 col-md-12">                    <div class="form-floating">                        <textarea class="form-control changable2" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" asp-for="AdminNotes"></textarea>                        <label for="floatingTextarea2">                            Admin Notes                            <span class="d-none d-sm-inline">(Optional)</span>                        </label>                    </div>                </div>            </div>            <h5 class=" mt-4 pt-2 border-top border-secondary ">Onboarding</h5>            <div class="d-flex align-items-center gap-3 mb-3 w-75 d-flex justify-content-between">                <div class="m-0 p-0">                    <input type="checkbox" class="form-check-input" id="agreeToICA" name="agreeToICA">                    <span class="mx-5">Independent Contractor Agreement</span>                </div>                <div class="m-0 p-0">                    <input type="file" asp-for="ICAFile" class="form-control w-75" id="ICA" hidden />                    <label class="input-group-text btn btn-info text-light" for="ICA">                        <span class="d-none d-md-inline">Upload</span>                    </label>                </div>            </div>            <div class="d-flex align-items-center gap-3 mb-3 w-75 d-flex justify-content-between">                <div class="m-0 p-0">                    <input type="checkbox" class="form-check-input" id="bca" name="agreeToICA">                    <span class="mx-5">Background Check</span>                </div>                <div class="m-0 p-0">                    <input type="file" asp-for=BackFile class="form-control" id="Background" hidden />                    <label class="input-group-text btn btn-info text-light" for="Background">                        <span class="d-none d-md-inline">Upload</span>                    </label>                </div>            </div>            <div class="d-flex align-items-center gap-3 mb-3 w-75 d-flex justify-content-between">                <div class="m-0 p-0">                    <input type="checkbox" class="form-check-input" id="hip" name="agreeToICA">                    <span class="mx-5">Hippa Compalience</span>                </div>                <div class="m-0 p-0">                    <input type="file" asp-for="HippaFile" class="form-control" id="Hippa" hidden />                    <label class="input-group-text btn btn-info text-light" for="Hippa">                        <span class="d-none d-md-inline">Upload</span>                    </label>                </div>            </div>            <div class="d-flex align-items-center gap-3 mb-3 w-75 d-flex justify-content-between">                <div class="m-0 p-0">                    <input type="checkbox" class="form-check-input" id="ndu" name="agreeToICA">                    <span class="mx-5">Non-disclosure-Agreement</span>                </div>                <div class="m-0 p-0">                    <input type="file" asp-for="NonFile" class="form-control" id="NonDiscoluser" hidden />                    <label class="input-group-text btn btn-info text-light" for="NonDiscoluser">                        <span class="d-none d-md-inline">Upload</span>                    </label>                </div>            </div>            <div class="d-flex justify-content-end py-2 border-top border-secondary">                <button type="submit" class="btn btn-success">Create Account</button>            </div>        </form>    </div></section><script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script><script src="~/lib/jquery/dist/jquery.js"></script><script src="~/jquery-validate/jquery.validate.js"></script><script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script><script>    $('#ICA').on('change', function () {        var box = $('#agreeToICA');        checkthebox(box, this);    });    $('#Background').on('change', function () {        var box = $('#bca');        checkthebox(box, this);    });    $('#Hippa').on('change', function () {        var box = $('#hip');        checkthebox(box, this);    });    $('#NonDiscoluser').on('change', function () {        var box = $('#ndu');        checkthebox(box, this);    });    function checkthebox(checkid, fileid) {        if (fileid.files && fileid.files.length > 0) {            checkid.prop('checked', true);        }        else {            checkid.prop('checked', false);        }    }</script>