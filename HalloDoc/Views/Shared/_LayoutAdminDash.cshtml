                            <button class="px-2 shadow-none nav-link text-decoration-none text-info @(ViewContext.ActionDescriptor.RouteValues["action"] == "Provider" || ViewContext.ActionDescriptor.RouteValues["action"] == "Scheduling" || ViewContext.ActionDescriptor.RouteValues["action"] == "CreateProviderAcc" ? "active" : "")" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">Providers</button>
