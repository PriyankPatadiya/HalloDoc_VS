                            <a asp-action="Partners" class="px-2 shadow-none nav-link text-decoration-none text-info @(ViewContext.ActionDescriptor.RouteValues["action"] == "Partners" || ViewContext.ActionDescriptor.RouteValues["action"] == "EditBusiness" || ViewContext.ActionDescriptor.RouteValues["action"] == "ProviderProfile" ? "active" : "")">Partners</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button type="button" class="px-2  shadow-none nav-link text-decoration-none text-info @(ViewContext.ActionDescriptor.RouteValues["action"] == "userAccess" || ViewContext.ActionDescriptor.RouteValues["action"] == "CreateProviderAcc" || ViewContext.ActionDescriptor.RouteValues["action"] == "roleAccess" || ViewContext.ActionDescriptor.RouteValues["action"] == "CreateAccess" ? "active" : "")" id="dropdownMenu3" data-bs-toggle="dropdown" aria-expanded="false">Access</button>
                            <div class="dropdown">
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu3">
                                    <li><a asp-action="userAccess" class="dropdown-item" type="button">UserAccess</a></li>
                                    <li><a asp-action="roleAccess" class="dropdown-item" type="button">Role Access</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="px-2 shadow-none nav-link text-decoration-none text-info @(ViewContext.ActionDescriptor.RouteValues["action"] == "PatientHistory" || ViewContext.ActionDescriptor.RouteValues["action"] == "BlockedHistory" || ViewContext.ActionDescriptor.RouteValues["action"] == "SearchRecords" || ViewContext.ActionDescriptor.RouteValues["action"] == "explorePatientRequests" ? "active" : "")" id="dropdownMenu4" data-bs-toggle="dropdown" aria-expanded="false">Records</button>
                            <div class="dropdown">
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu4">
                                    <li><a asp-action="SearchRecords" class="dropdown-item" type="button">Search Records </a></li>
                                    <li><button  class="dropdown-item" type="button">Email Logs</button></li>
                                    <li><button  class="dropdown-item" type="button">SMS Logs</button></li>
                                    <li><a asp-action="PatientHistory" class="dropdown-item" type="button">Patient Records</a></li>
                                    <li><a asp-action="BlockedHistory" class="dropdown-item" type="button">Blocked History</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


    </div>

    
    <div class="container-fluid px-0 bg-light-subtle">
        <main role="main" class="overflow-auto" style="height: 92vh !important; padding-top: 15vh !important">
            @RenderBody()
        </main>
    </div>
    


    <footer class="border-top  text-muted position-fixed bottom-0 start-0 w-100" style="z-index: 100 !important">
        <div style="height: 8vh;" class="bg-dark d-flex flex-row-reverse align-items-center pe-3" id="submitfooter">
            <span class="text-light fw-semibold">Terms of conditions | Privacy Policy</span>
        </div>
    </footer>



    <partial name="_ValidationScriptsPartial"></partial>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
