@model DAL.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login-Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/HalloDoc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PatientLoginStyle.css" asp-append-version="true"/>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container-fluid">
        <!-- Dark Mode Icon -->
        <button class="btn bg-transparent pt-1 pb-2 border border-info text-info position-absolute top-0 end-0 mx-2 my-2 shadow-none" id="theme-toggle">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="16"
                 height="16"
                 fill="currentColor"
                 class="bi bi-moon"
                 viewBox="0 0 16 16">
                <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
            </svg>
        </button>


        <!-- Main Row Of Login Page -->
        <div class="row" id="mainRowOfLoginpg ">

            <!-- First Column ( Background Page ) -->
            <div class="col-12 col-lg-6 col-sm-12 col-md-6 mx-auto"
                 id="FirstColOfLogin">
                
            </div>

            <!-- Second Column ( Login Form with logo Page ) -->
            <div class="col-12 col-lg-6 col-sm-12 col-md-6 text-center overflow-hidden"
                 id="SecondColOfLogin">
                <!-- HalloDoc Logo  -->
                <div class="LogoImg my-5 py-auto d-flex align-items-center justify-content-center" id="hallodocImage" style="height: 30%;">
                    <img src="~/images/hallodoc2.png" alt="" style="height: 50%;"/>
                </div>

                <!-- Login form  -->
                <form asp-action="PatientLoginn" asp-controller="Home" method="post">
                <div class="loginform py-2 text-start mx-auto" style="width: 50%">
                    <div id="backtologin " class="mx-auto">
                        <a asp-action="PatientSite" class="btn p-2 btn-outline-info text-decoration-none ">
                            <img src="~/images//arrow_back_ios_FILL0_wght400_GRAD0_opsz24.svg"
                                 alt="" /><span class="fw-semibold">Back</span>
                        </a>
                    </div>
                    <h2 class="my-4">LogIn To Your Account</h2>

                    <div class="mx-auto my-2">
                        <div class="form-floating d-flex border rounded bg-transparent logininputdiv">
                            <input type="email"
                                asp-for="Email"
                                   class="form-control no-border bg-transparent"
                                   id="floatingInputGroup1"
                                   placeholder="Username" /><img src="~/images/user_circle.svg" alt="" class="pe-3" />
                            <label for="floatingInputGroup1">Username</label>
                            
                        </div>
                    </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="mx-auto my-2">
                            <div class="form-floating d-flex border rounded bg-transparent logininputdiv">
                            <input type="password"
                                asp-for="PasswordHash"
                                       class="form-control no-border bg-transparent"
                                   id="floatingPassword"
                                   placeholder="Password" />
                            @*<img src="~/images/password_icon.svg" alt="" class="pe-3" />*@
                            <label for="floatingPassword">Password</label>
                            
                        </div>
                            
                    </div>
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                <div class="d-grid mx-auto btn-group btn-group-lg my-4"
                     style="width: 50%">
                    <button class="btn btn-info text-white" type="submit">
                        Login
                    </button>
                </div>
                </form>
                <a asp-action="ResetPassword" style="text-decoration: none">
                    <span class="my-5 fw-semibold text-black">
                        Forget Password?
                    </span>
                </a>
                <a asp-action="PatientCreateAcc" style="text-decoration: none">
                    <span class="my-5 fw-semibold text-black">
                        Sign Up
                    </span>
                </a>
                <div class="termsfooter text-center align-bottom">
                    <span class="text-secondary fw-semibold">Terms of conditions | Privacy Policy </span>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
