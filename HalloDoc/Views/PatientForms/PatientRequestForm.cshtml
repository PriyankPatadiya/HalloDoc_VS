@model DAL.ViewModels.PatientReqVM

@{
    ViewData["Title"] = "PatientRequest";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HalloDoc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/RequestForms.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        input:-webkit-autofill {
            transition: background-color 0s 600000s, color 0s 600000s !important;
        }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body class="">
    <nav class="navbar navbar-expand-lg d-flex justify-content-between shadow">
        <img src="../Images/hallodoc2.png"
             alt=""
             style="height: 8vh; margin-left: 4vw"
             class="" />
        <button class="btn bg-transparent pt-1 pb-2 border border-info text-info me-4 shadow-none" id="theme-toggle">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="16"
                 height="16"
                 fill="currentColor"
                 class="bi bi-moon"
                 id="darksvg"
                 viewBox="0 0 16 16">
                <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class=" bi bi-brightness-low-fill" viewBox="0 0 16 16" id="lightsvg">
                <path d="M12 8a4 4 0 1 1-8 0 4 4 0 0 1 8 0M8.5 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0m0 11a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0m5-5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m-11 0a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m9.743-4.036a.5.5 0 1 1-.707-.707.5.5 0 0 1 .707.707m-7.779 7.779a.5.5 0 1 1-.707-.707.5.5 0 0 1 .707.707m7.072 0a.5.5 0 1 1 .707-.707.5.5 0 0 1-.707.707M3.757 4.464a.5.5 0 1 1 .707-.707.5.5 0 0 1-.707.707" />
            </svg>
        </button>
    </nav>
    
    <div class="container-fluid pb-4">
        <div class="mx-auto pt-3 mb-3" id="secondDiv">
            <div class="backbtn d-flex justify-content-end">
                <a asp-controller="Home" asp-action="submitRequest"
                   class="p-2 border text-decoration-none border-info rounded bg-transparent">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         width="16"
                         height="16"
                         fill="currentColor"
                         class="bi bi-chevron-left"
                         viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                    </svg>
                    <span class="mx-2 text-info">Back</span>
                </a>
            </div>

            <div id="FormOfPatientRequest" class="mt-3 p-3 gx-4 mb-3 bg-gradient shadow">
                <form class="form-floating" method="post" enctype="multipart/form-data" novalidate>
                    <!-- Patient Information -->
                    <div class="row gx-4">
                        <h4 class="fw-semibold text-body">Patient Information</h4>
                        <div class="form-floating my-3 control-group col-12">
                            <textarea class="form-control"
                                      placeholder="Leave a comment here"
                                      id="floatingTextarea2"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2 control-label" class="ms-2 floating-label">Enter Brief Details of symptoms (Optional)</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">   
                            <input type="text"
                                asp-for="FirstName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="First Name" />
                            <label for="floatingInput" class="ms-2">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger" style="font-size: 11px;"></span>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="LastName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger" style="font-size: 11px;"></span>
                        </div>

                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="date"
                                asp-for="BirthDate"
                                   class="form-control"
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")" 
                                   min="@DateTime.Now.AddYears(-80).ToString("yyyy-MM-dd")"
                                   id="floatingInput"
                                   placeholder="Date Of Birth" />
                            <label for="floatingInput" class="ms-2">Date Of Birth</label>
                            <span asp-validation-for="BirthDate" class="text-danger" style="font-size: 11px;">  </span>
                        </div>

                        <!-- Patient Contact Information -->

                        <h4 class="fw-semibold text-body mt-3">
                            Patient Contact Information
                        </h4>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="email"
                                asp-for="Email"
                                   class="form-control"
                                   id="email1"
                                   placeholder="name@InputType.com"
                                   onchange="CheckEmail()" />
                            <label for="floatingInput" class="ms-2">Email</label>
                            <span asp-validation-for="Email" class="text-danger" style="font-size: 11px;"></span>
                        </div>

                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="tel"
                                asp-for="PhoneNumber"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="PhoneNumber" />
                            <label for="floatingInput" class="ms-2">Mobile Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger" style="font-size: 11px;"></span>
                        </div>

                        <div class ="row" id="passwordFields" style="display : none;">
                            <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                                <input type="password"
                                       asp-for="PasswordHash"
                                       class="form-control"
                                       id="password"
                                       placeholder="Password" />
                                <label for="floatingInput" class="ms-2">Password</label>
                                <span asp-validation-for="PasswordHash" class="text-danger" style="font-size: 11px;"></span>
                            </div>

                            <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                                <input type="tel"
                                       asp-for="ConfirmPasswordHash"
                                       class="form-control"
                                       id="ConfirmPassword"
                                       placeholder="ConfirmPassword" />
                                <label for="floatingInput" class="ms-2">ConfirmPassword</label>
                            </div>

                        </div>

                        <!-- Patient Location-->

                        <h4 class="fw-semibold text-body mt-3">
                            Patient Location
                        </h4>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="Street"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="First Name" />
                            <label for="floatingInput" class="ms-2">Street</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="City"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">City</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <select class="form-control d-flex align-items-center py-2 bg-body" asp-for="State" name="SelectedStateId">
                                <option>Select State</option>
                                @foreach (var state in Model.Region)
                                {
                                    <option value="@state.RegionId">@state.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                    asp-for="ZipCode"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Zip Code</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Room # / Suite (Optional)</label>
                        </div>

                        <!-- Upload File -->

                        <h4 class="fw-semibold text-body mt-3">
                            (Optional) Upload File Or Document
                        </h4>

                        <div class="input-group input-group-lg mt-5">
                            <label id="infoarea" for="fileInput" class="form-control fs-6 bg-body-secondary align-middle py-1 d-flex align-items-center">
                                Select File
                            </label>
                            <input type="file" asp-for="Document" class="form-control" id="fileInput" hidden multiple />
                            <button class="input-group-text btn btn-info text-light" id="filesubmitbtn" type="button">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="24"
                                     height="24"
                                     fill="currentColor"
                                     class="bi bi-cloud-arrow-up"
                                     viewBox="0 0 16 16">
                                    <path fill-rule="evenodd"
                                          d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z" />
                                    <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                                </svg>
                                <span class="d-none d-md-inline">Select File</span>
                            </button>

                        </div>
                        <div class="d-flex justify-content-end my-3">
                            <button onclick="return validateInput()" type="submit" class="btn border-none bg-info p-3 text-light fw-semibold me-4" id="submitBtn">
                                submit
                            </button>
                            <button class="btn border-none bg-danger border-danger text-light p-3 fw-semibold">
                                cancel
                            </button>
                        </div>
                    </div>
                </form>
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        </div>
    </div>
    <div style="height: 8vh;" class="bg-dark d-flex flex-row-reverse align-items-center pe-3 " id="submitfooter">
        <span class="text-light fw-semibold">Terms of conditions | Privacy Policy</span>
    </div>

    @section scripts {
        <!-- jQuery script -->
        
    }
    
    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" asp-append-version="true"></script>
    <script src="~/js/RequestForms.js" asp-append-version="true"></script>

    <script type="text/javascript">
       var passfield = "#passwordFields"

       var input = document.getElementById("fileInput");
       var info  = document.getElementById("infoarea");

       input.addEventListener('change', showFilename);

       function showFilename(){
           var fileinp = event.srcElement;
           var fileName = fileinp.files[0].name;
           info.textContent = fileName;
       }

        function uploadfile() {
            document.getElementById("inputGroupFile04").click();
        }
        function CheckEmail() {
            var email = $('#email1').val();
            $.ajax({
                type: "POST",
                url: "@Url.Action("CheckMail", "PatientForms")",
                data: {email:email},
                
                
                success: function (response) {
                    if (!response) {
                        // Email not available.
                        $('#passwordFields').show();
                    } else {
                        // Email  available.
                        $('#passwordFields').hide();
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        };

        function validateInput(){
            if (document.getElementById("inputGroupFile04").value == "") {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Please Upload File!",
                    
                });
                return false;
            }
            return true;
        }

        
    </script>


</body>
</html>
    
