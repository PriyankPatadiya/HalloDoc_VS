@model DAL.ViewModels.OthersReqVM
@{
    ViewData["Title"] = "Concierge Request Form";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/HalloDoc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/RequestForms.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/js/site.js" asp-append-version="true"></script>

    <title>@ViewData["Title"]</title>
</head>
<body>
    <!-- Modal -->

    <div class="modal fade"
         id="exampleModal"
         tabindex="-1"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true"
         onload="OnLoad()">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content px-5 border-3 border-opacity-25 border-warning">

                <div class="warninglogo d-flex justify-content-center my-4 p-2 text-light ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor" class="bi bi-exclamation-circle bg-warning border rounded-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z" />
                    </svg>
                </div>
                <div class="modalinfo text-center container ">
                    <h4>Information</h4>
                    <span style="font-size: 13px;">
                        When Submitting a request, You must provide the correct contact information for the patient or the responsibly party. Failure to provide the correct email id and phone number will delay the service or be declined.
                    </span>
                </div>
                <div class="subbutton mx-auto my-4 pb-3">
                    <button class="btn bg-info text-light" data-bs-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal Over -->

    <!-- Navbar Started -->
    <nav class="navbar navbar-expand-lg d-flex justify-content-between shadow">
        <img src="../Images/hallodoc2.png"
             alt=""
             style="height: 8vh; margin-left: 4vw"
             class="" />
        <button class="btn bg-transparent pt-1 pb-2 border border-info text-info me-4 shadow-none" id="theme-toggle">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="16"
                 height="16"
                 fill="currentColor"
                 class="bi bi-moon"
                 id="darksvg"
                 viewBox="0 0 16 16">
                <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class=" bi bi-brightness-low-fill" viewBox="0 0 16 16" id="lightsvg">
                <path d="M12 8a4 4 0 1 1-8 0 4 4 0 0 1 8 0M8.5 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0m0 11a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0m5-5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m-11 0a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m9.743-4.036a.5.5 0 1 1-.707-.707.5.5 0 0 1 .707.707m-7.779 7.779a.5.5 0 1 1-.707-.707.5.5 0 0 1 .707.707m7.072 0a.5.5 0 1 1 .707-.707.5.5 0 0 1-.707.707M3.757 4.464a.5.5 0 1 1 .707-.707.5.5 0 0 1-.707.707" />
            </svg>
        </button>
    </nav>

    <!-- Navbar Over -->


    <div class="container-fluid pb-4">
        <div class="mx-auto pt-3 mb-3" id="secondDiv">

            <!-- Back Button -->
            <div class="backbtn d-flex justify-content-end">
                <a asp-controller="Home" asp-action="submitRequest"
                   class="p-2 border text-decoration-none border-info text-info rounded bg-transparent">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         width="24"
                         height="24"
                         fill="currentColor"
                         class="bi bi-chevron-left"
                         viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                    </svg>
                    <span class="mx-2 text-info">Back</span>
                </a>
            </div>

            <!-- Form -->

            <div id="FormOfPatientRequest" class="mt-3 p-3 gx-4 mb-3 bg-gradient shadow">
                <form class="form-floating" asp-action="ConciergeRequestForm" enctype="multipart/form-data" id="form">
                    <div class="row gx-4">

                        <!-- Concierge Information -->
                        <h4 class="fw-semibold text-body mt-3">Concierge Information</h4>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="YourFirstName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="First Name" />
                            <label for="floatingInput" class="ms-2">Your First Name</label>
                            <span asp-validation-for="YourFirstName" class="text-danger" style="font-size: 11px;"></span>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="YourLastName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Your Last Name</label>
                            <span asp-validation-for="YourLastName" class="text-danger" style="font-size: 11px;"></span>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="tel"
                                asp-for="YourPhoneNumber"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="MobileNo." />
                            <label for="floatingInput" class="ms-2">Mobile Number</label>
                            <span asp-validation-for="YourPhoneNumber" class="text-danger" style="font-size: 11px;"></span>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="email"
                                asp-for="YourEmail"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Your Email</label>
                            <span asp-validation-for="YourEmail" class="text-danger" style="font-size: 11px;"></span>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="HotelName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Hotel" />
                            <label for="floatingInput" class="ms-2">Hotel/Property Name</label>
                        </div>

                        <!-- Patient Information -->

                        <h4 class="fw-semibold text-body mt-3">Patient Information</h4>
                        <div class="form-floating my-3 control-group col-12">
                            <textarea class="form-control"
                                      placeholder="Leave a comment here"
                                      id="floatingTextarea2"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2 control-label" class="ms-2">Enter Brief Details of symptoms (Optional)</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="FirstName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="First Name" />
                            <label for="floatingInput" class="ms-2">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger" style="font-size: 11px;"></span>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="LastName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger" style="font-size: 11px;"></span>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="date"
                                asp-for="BirthDate"
                                   class="form-control"
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                   min="@DateTime.Now.AddYears(-80).ToString("yyyy-MM-dd")"
                                   id="floatingInput"
                                   placeholder="Date Of Birth" />
                            <label for="floatingInput" class="ms-2">Date Of Birth</label>
                            <span asp-validation-for="BirthDate" class="text-danger" style="font-size: 11px;"></span>
                        </div>

                        <!-- Patient Contact Information -->

                        <h4 class="fw-semibold text-body mt-3">
                            Patient Contact Information
                        </h4>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="email"
                                asp-for="Email"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="First Name" />
                            <label for="floatingInput" class="ms-2">Email</label>
                            <span asp-validation-for="Email" class="text-danger" style="font-size: 11px;"></span>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="tel"
                                asp-for="PhoneNumber"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Mobile Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger" style="font-size: 11px;"></span>
                        </div>

                        <!-- Patient Location-->

                        <h4 class="fw-semibold text-body mt-3">
                            Patient Location
                        </h4>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="Street"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Street" />
                            <label for="floatingInput" class="ms-2">Street</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="City"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="City" />
                            <label for="floatingInput" class="ms-2">City</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <select class="form-control bg-body" asp-for="State" name="SelectedStateId">
                                <option>Select State</option>
                                @foreach (var state in Model.Region)
                                {
                                    <option value="@state.RegionId">@state.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                asp-for="Zipcode"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Zip Code</label>
                        </div>
                        <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                            <input type="text"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="Last Name" />
                            <label for="floatingInput" class="ms-2">Room # / Suite (Optional)</label>
                        </div>

                        <div class="d-flex justify-content-end my-3">
                            <button class="btn border-none bg-info p-3 text-light fw-semibold me-4">
                                submit
                            </button>
                            <button type="button" class="btn btn-outline-info p-3 fw-semibold" onclick="resetForm()">
                                cancel
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Form Over -->
        </div>
    </div>
    <div style="height: 8vh;" class="bg-dark d-flex flex-row-reverse align-items-center pe-3" id="submitfooter">
        <span class="text-light fw-semibold">Terms of conditions | Privacy Policy</span>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    <script>
        function uploadfile() {
            document.getElementById("inputGroupFile04").click();
        }
        const myModal = bootstrap.Modal.getOrCreateInstance("#exampleModal");
        window.addEventListener("DOMContentLoaded", () => {
            myModal.show();
        });
    </script>
    <script src="~/js/RequestForms.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial"></partial>
</body>

</html>
